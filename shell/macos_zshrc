# paths
export PATH=$HOME/bin:/usr/local/bin:$PATH
export PATH=$HOME/.local/bin:$PATH
export ZSH="$HOME/.oh-my-zsh"
export PATH="/opt/homebrew/bin:$PATH"
export PATH="/opt/homebrew/sbin:/opt/homebrew/bin:$PATH"


# Add user-installed Python tools to PATH
export PATH="$HOME/Library/Python/3.13/bin:$PATH"

# set zsh stuff
ZSH_THEME="ys"
source $ZSH/oh-my-zsh.sh

# set plugins
plugins=(nmap vscode ansible colorize rsync uv git kubectl fluxcd aliases brew)

# history
HISTFILE=$HOME/.zsh-history
HISTSIZE=100000
SAVEHIST=1000000

# share .zshhistory
setopt inc_append_history   # save the command to history when running
setopt share_history        # share history with other session

# automatically change directory when dir name is typed
setopt auto_cd

# 256 color mode
export TERM="xterm-256color"

# devops
alias devops="cd ~/devops"
alias k3s="ssh k3s"
alias hl="cd ~/dev/homelab"

# alias
alias grep="grep --color=auto"
alias fgrep="fgrep --color=auto"
alias egrep="egrep --color=auto"
alias wanip='curl ifconfig.com'
alias l="ls -CF"
alias ll="ls -lh"
alias la="ls -A"
alias sl="ls"
alias zshrl='source $HOME/.zshrc'
alias zshed='nvim $HOME/.zshrc'
alias dev='cd $HOME/dev/'
alias dkr='cd $HOME/docker/'
alias dps='docker ps'
alias pacu='sudo pacman -Syu'
alias pacs='sudo pacman -S'
alias aptu='sudo apt update -y ; sudo apt upgrade -y'
alias apti='sudo apt install -y'
alias giti='git init'
alias gita='git add .'
alias gitc='git commit -m'
alias gitp='git push'
alias gc='git clone'
alias ts='/Applications/Tailscale.app/Contents/MacOS/Tailscale'
alias ml='cd $HOME/dev/ml/'
alias mkd='/Users/bl/Library/Python/3.10/bin/mkdocs'
alias zrl='source ~/.zshrc'
alias zed='nvim ~/.zshrc'
alias bupg='brew update & brew upgrade'
alias c='/usr/bin/clear'
alias mkdir='mkdir -pv'
alias h='history'
alias j='jobs -l'
alias now='date +"%d-%m-%Y"'
alias fastping='ping -c 100 -s.2'
alias ping='ping -c 5'
refresh () { while true; do $@; sleep 1; clear; done; }
alias ytdlm='yt-dlp --extract-audio --audio-format mp3'
alias uptime='uptime --pretty'
alias pubkey='cat ~/.ssh/id_ed25519.pub'
alias kh="nvim ~/.ssh/known_hosts"
alias shed='nvim ~/.ssh/config'
alias pivpn='ssh pi "pivpn -c"'
alias pivpn-ts='ssh tail-pi "pivpn -c"'
alias sshed='nvim /Users/bryanlurer/.ssh/config'
alias ff='fastfetch'
alias nv='nvim'
alias vim='nvim'
alias duh='du -h -d 1 ~ 2>&1 | grep -v "Operation not permitted" | sort -hr'

# Added by LM Studio CLI (lms)
export PATH="$PATH:/Users/bryanlurer/.lmstudio/bin"

# macos
alias dl='/Users/bryanlurer/Downloads'

# Added by LM Studio CLI (lms)
export PATH="$PATH:/Users/bl/.lmstudio/bin"
# End of LM Studio CLI section

# terraform
alias tin='terraform init'
alias tpl='terraform plan'

export NVM_DIR="$HOME/.nvm"
[ -s "$NVM_DIR/nvm.sh" ] && \. "$NVM_DIR/nvm.sh"  # This loads nvm
[ -s "$NVM_DIR/bash_completion" ] && \. "$NVM_DIR/bash_completion"  # This loads nvm bash_completion

# opencode
export PATH=/Users/bl/.opencode/bin:$PATH
